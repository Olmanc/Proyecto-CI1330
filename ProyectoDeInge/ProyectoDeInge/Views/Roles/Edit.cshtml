@model ProyectoDeInge.Models.permisosViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="table">
        <tr>
            <th></th>
            @foreach (var item in Model.todoRoles)
            {
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
            }
        </tr>
        @foreach (var item in Model.todoPermisos)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NOMBRE)</td>
                <td><input class="asignaPermisos" type="checkbox" id="@item.ID" name="Administrador" value="@item.ID" /></td>
                <td><input class="asignaPermisos" type="checkbox" id="@item.ID" name="Desarrollador" value="@item.ID" /></td>
                <td><input class="asignaPermisos" type="checkbox" id="@item.ID" name="Usuario" value="@item.ID" /></td>
            </tr>
        }
    </table>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-default" />
        <!--<button onclick="chequeados()">Guardar</button>-->
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script type="text/javascript">
    function chequeados() {

        return document.getElementsByClassName("asignaPermisos").checked;


    }
</script>
<script src="~/Scripts/jquery-2.1.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
